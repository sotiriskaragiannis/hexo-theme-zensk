<footer style="padding:25px 0;">
    <!-- Social Links Section -->
    <% if (config.socials) { %>
    <div class="social-links" style="text-align:center; margin-bottom:15px;">
        <% for (const [name, data] of Object.entries(config.socials)) { %>
        <a href="<%= data.url %>" target="_blank" rel="noopener noreferrer" style="margin: 0 10px;">
            <i class="fab <%= data.icon %>" aria-hidden="true" style="font-size: 1.5em;"></i>
            <span class="sr-only"><%= name %></span>
        </a>
        <% } %>
    </div>
    <% } %>

    <!-- Rest of the Footer -->
    <% if (theme.copyright) { %>
    <span>
        &copy; <%= theme.copyright.year || date(new Date(), 'YYYY') %>
            <%= theme.copyright.name || config.author %>
    </span>
    <% } %>
    <span>
        Powered by 
        <a href="<%= theme.copyright.theme.url %>" target="_blank">
            <%= theme.copyright.theme.name %> Theme
        </a>
    </span>
    <% if (theme.copyright.based_on) { %>
    <span>
        , based on 
        <a href="<%= theme.copyright.based_on.url %>" target="_blank">
            <%= theme.copyright.based_on.name %>
        </a>
        by <%= theme.copyright.based_on.author %>
    </span>
    <% } %>
    <br>
    <span>
        Powered by <a href="https://hexo.io/" target="_blank">Hexo</a>
    </span>
</footer>
