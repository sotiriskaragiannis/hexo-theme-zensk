<footer style="padding:25px 0;">
    <!-- TODO: Add links to socials like GitHub, Instagram, etc. -->
    <br/>
    <% if (theme.copyright) { %>
    <span>
        &copy; <%= theme.copyright.year || date(new Date(), 'YYYY') %>
            <%= theme.copyright.name || config.author %>
    </span>
    <% } %>
    <span>
        Powered by 
        <a href="<%= theme.copyright.theme.url %>" target="_blank">
            <%= theme.copyright.theme.name %> Theme
        </a>
    </span>
    <% if (theme.copyright.based_on) { %>
    <span>
        , based on 
        <a href="<%= theme.copyright.based_on.url %>" target="_blank">
            <%= theme.copyright.based_on.name %>
        </a>
        by <%= theme.copyright.based_on.author %>
    </span>
    <% } %>
    <br>
    <span>
        Powered by <a href="https://hexo.io/" target="_blank">Hexo</a>
    </span>
</footer>
